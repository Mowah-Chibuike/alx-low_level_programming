nclude <stdlib.h>

void reverse_array(int *a, int n)
{
        int i, b;
        int *s = malloc(sizeof(int) * n);

        for (i = 0; i < n; i++)
        {
                s[i] = a[i];
        }

        b = 0;
        while (b < n)
        {
                a[b] = s[i - 1];
                b++;
                i--;
        }
}
